{
  "environment": "production",
  "server": {
    "port": 8080,
    "host": "0.0.0.0"
  },
  "auth": {
    "admin_token": "${ADMIN_TOKEN}",
    "app_client_token": "${APP_CLIENT_TOKEN}"
  },
  "rate_limit": {
    "max_requests": 1000,
    "window_seconds": 60
  },
  "feature_flags": [
    {
      "key": "drawing_v1",
      "enabled": true,
      "rollout_percentage": 100,
      "allowed_roles": ["consultor", "produtor"],
      "version": 1,
      "min_app_version": "1.1.0",
      "description": "Drawing module - Full production rollout",
      "created_at": "2026-02-12T10:00:00.000Z"
    }
  ],
  "logging": {
    "level": "warning",
    "include_request_body": false
  },
  "storage": {
    "type": "json",
    "path": "data/feature_flags.production.json"
  },
  "security": {
    "cors_allowed_origins": [
      "https://app.soloforte.com.br",
      "https://admin.soloforte.com.br"
    ],
    "require_https": true
  }
}
